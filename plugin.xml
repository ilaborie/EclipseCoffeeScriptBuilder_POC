<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="coffeescriptBuilder"
         name="CoffeeScript Project Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="org.ilaborie.eclipsecon2014.builder.CoffeeScriptBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="coffeescript.nature"
         name="CoffeeScript Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.ilaborie.eclipsecon2014.builder.coffeescriptNature">
         </run>
      </runtime>
      <builder
            id="EclipseBuilder.coffeescriptBuilder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="CoffeeScript Project Nature commands"
            id="EclipseBuilder.coffeescript.nature.category">
      </category>
      <command
            name="Add/RemoveCoffeeScript Project Nature"
            defaultHandler="org.ilaborie.eclipsecon2014.builder.AddRemovecoffeescriptNatureHandler"
            categoryId="EclipseBuilder.coffeescript.nature.category"
            id="EclipseBuilder.addRemovecoffeescriptNature">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.projectConfigure?after=additions">
         <command
               commandId="EclipseBuilder.addRemovecoffeescriptNature"
               label="Disable Sample builder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <test
                              value="EclipseBuilder.coffeescript.nature"
                              property="org.eclipse.core.resources.projectNature">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="EclipseBuilder.addRemovecoffeescriptNature"
               label="Enable Sample builder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <not>
                           <test
                                 value="EclipseBuilder.coffeescript.nature"
                                 property="org.eclipse.core.resources.projectNature">
                           </test>
                        </not>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         id="xmlProblem"
         name="XML Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>

</plugin>
